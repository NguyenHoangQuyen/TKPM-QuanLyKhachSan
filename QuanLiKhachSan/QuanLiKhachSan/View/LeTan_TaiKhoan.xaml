<UserControl
    x:Class="QuanLiKhachSan.View.LeTan_TaiKhoan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLiKhachSan.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource LeTanTaiKhoanVM}"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="1.25*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.75*" />

        </Grid.RowDefinitions>
        <Separator Grid.ColumnSpan="2">
            <Separator.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}" />
            </Separator.Background>
        </Separator>
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10,20,0,10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <Image Source="D:\OneDrive - VNU-HCMUS\FIT-HCMUS\FIT-NAM3\HK2\3.Thiet-KePM\Deadline\DOAN\712-706\QuanLiKhachSan\QuanLiKhachSan\Images\avatar.png" />
            <StackPanel Margin="30,20,0,0">
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="{StaticResource CoChuLon}"
                    FontWeight="Bold"
                    Text="Nguyễn Hoàng Quyên" />
                <TextBlock
                    FontSize="{StaticResource CoChuThuong}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"
                    Text="Nhân viên lễ tân" />
                <TextBlock
                    FontSize="{StaticResource CoChuThuong}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"
                    Text="Mã nhân viên: 0001" />
            </StackPanel>
        </StackPanel>
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="50,0,120,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource StyleTextForm}"
                Text="Họ tên" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource StyleInputForm}"
                Text="{Binding HoTenInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource StyleTextForm}"
                Text="Địa chỉ" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource StyleInputForm}"
                Text="{Binding DiaChiInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource StyleTextForm}"
                Text="Chứng minh thư" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource StyleInputForm}"
                Text="{Binding CMNDInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Style="{StaticResource StyleTextForm}"
                Text="Điện thoại" />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource StyleInputForm}"
                Text="{Binding DienThoaiInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Style="{StaticResource StyleTextForm}"
                Text="Tên đăng nhập" />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Style="{StaticResource StyleInputForm}"
                Text="{Binding TenDangNhapInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Style="{StaticResource StyleTextForm}"
                Text="Mật khẩu" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Style="{StaticResource StyleInputForm}"
                Text="{Binding MatKhauInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Height="35"
            Margin="0,0,150,0"
            HorizontalAlignment="Right"
            Background="{StaticResource MauChuHeader}"
            BorderThickness="0"
            Command="{Binding LuuThongTinBtnCommand}"
            CommandParameter="{Binding ElementName=WindowKhachHang}"
            Style="{StaticResource StyleBtnCoBan}">
            LƯU THÔNG TIN
        </Button>
    </Grid>
</UserControl>
